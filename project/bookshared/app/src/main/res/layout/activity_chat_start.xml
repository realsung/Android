<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4a5e84"
    tools:context="bookshared.android.kr.bookshared.chat.ChatStartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="채팅방 입장"
                android:textColor="#e3e4e5"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13dp"
                android:text="개설된 채팅방의 채팅방명을 입력하면 그 채팅방으로 접속"
                android:layout_height="wrap_content"
                android:textColor="#bec1c6"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/user_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="채팅방명을 입력하세요"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColorHint="#bec9db"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/user_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:hint="자신의 이메일을 입력하세요"
                android:textSize="15dp"
                android:textColorHint="#bec9db"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/user_next"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="GO"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="개설된 채팅방"
                android:textColor="#e3e4e5"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

            <ListView
                android:background="#4a5e84"
                android:id="@+id/chat_list"
                android:divider="#CCCCCC"
                android:cacheColorHint="#000000"
                android:dividerHeight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
