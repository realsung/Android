<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e4e5">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:background="#013064"
    android:id="@+id/linearLayout2">

    <ImageView
        android:id="@+id/airplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/airplane" />

</LinearLayout>

    <Button
        android:id="@+id/NoticeButton"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:background="#203142"
        android:text="공지사항"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NoticeButton"
        android:layout_marginLeft="6dp"
        android:layout_alignBottom="@+id/NoticeButton"
        android:layout_toEndOf="@+id/NoticeButton"
        android:background="#203142"
        android:text="회원가입"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/ProfileButton"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LoginButton"
        android:layout_alignBottom="@+id/LoginButton"
        android:layout_alignParentEnd="true"
        android:background="#203142"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp"
        android:text="프로필"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RegisterButton"
        android:layout_alignBottom="@+id/RegisterButton"
        android:layout_toStartOf="@+id/ProfileButton"
        android:background="#203142"
        android:layout_marginLeft="6dp"
        android:text="로그인"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/ChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:text="실시간 채팅"
        android:background="#203142"
        android:layout_below="@id/NoticeButton"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/recommendText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/NoticeButton"
        android:layout_below="@+id/ChatButton"
        android:layout_marginTop="10dp"
        android:text="개발자가 추천하는 책"
        android:textColor="#021b42"
        android:textSize="20dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@id/recommendText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:background="#e8f0ff"
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bookImpression"
                        android:layout_width="wrap_content"
                        android:layout_height="185dp"
                        android:textColor="#000000"
                        android:text="분야 : 수학 동화\n\n\n책 제목 : 수의모험 \n\n\n저자 : 안나 체라솔리 \n\n\n\n출시 날짜 : 2005/04/28"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:background="#dde9ff"
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bookImpression2"
                        android:layout_width="wrap_content"
                        android:layout_height="185dp"
                        android:textColor="#000000"
                        android:text="분야 : 자기 계발\n\n\n책 제목 : 신경 끄기의 기술 \n\n\n저자 : 마크 맨슨 \n\n\n\n출시 날짜 : 2017/10/27"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:background="#d6e3fc"
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bookImpression3"
                        android:layout_width="wrap_content"
                        android:layout_height="185dp"
                        android:textColor="#000000"
                        android:text="분야 : 청춘소설\n\n\n책 제목 : 블랙 코미디 \n\n\n저자 : 유병재 \n\n\n\n출시 날짜 : 2017/10/30"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:background="#cedfff"
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bookImpression4"
                        android:layout_width="wrap_content"
                        android:layout_height="185dp"
                        android:textColor="#000000"
                        android:text="분야 : 추리소설\n\n\n책 제목 : 악의 \n\n\n저자 : 히가시노 게이고 \n\n\n\n출시 날짜 : 2008/07/25"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:background="#c4d8ff"
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bookImpression5"
                        android:layout_width="wrap_content"
                        android:layout_height="185dp"
                        android:textColor="#000000"
                        android:text="분야 : 장편소설\n\n\n책 제목 : 달콤한 노래 \n\n\n저자 : 레일라 슬리마니 \n\n\n\n출시 날짜 : 2017/11/03"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/itemBook"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/NoticeButton"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="베스트셀러"
        android:textColor="#021b42"
        android:textSize="20dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/itemBook">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="3dp" />

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>